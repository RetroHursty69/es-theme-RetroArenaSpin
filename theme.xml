<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <zIndex>43</zIndex>	      
        <type>vertical_wheel</type>
        <pos>0.29 0</pos>
        <size>1 1</size>
        <logoScale>1</logoScale>
        <logoSize>0.33 0.15</logoSize>
        <color>00000000</color>
        <maxLogoCount>7</maxLogoCount>
        <logoRotation>-4</logoRotation>
		<logoRotationOrigin>-4.0 0.5</logoRotationOrigin>
		<logoAlignment>center</logoAlignment>        
      </carousel>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>2</zIndex>                 
         <path>./_inc/images/main.png</path>
      </image>                    
      <text name="systemInfo">     
         <pos>0.37 0.56</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>ffffff</color>
         <fontPath>./_inc/fonts/GROBOLD.ttf</fontPath>
	     <fontSize>0.02</fontSize>
         <zIndex>7</zIndex>	     
      </text>            
   </view>
</feature>


